<!-- humans/index.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Your Therapy Notebook</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <div class="index-page">
    <%- include('../partials/_navbar.ejs') %> <!-- Include the navbar here -->
    <div class="index-container">
      <h1>Your Therapy Notebook: Humans in Your Life</h1>
      <div class="human-list">
        <% if (humans.length > 0) { %> <!-- Check if there are humans -->
          <ul>
            <% humans.forEach(human => { %> <!-- Loop through each human -->
              <li>
                <a href="/users/<%= user._id %>/humans/<%= human._id %>">
                  <%= human.name %> <!-- Display the human's name -->
                  <p><a href="/users/<%= user._id %>/humans/new">Add a human</a></p>
                </a>
              </li>
            <% }) %>
          </ul>
        <% } else { %>
          <p>No humans added yet. <a href="/users/<%= user._id %>/humans/new">Add a human</a></p>
        <% } %>
      </div>
    </div>
  </div>
</body>
</html>
