<!-- views/users/show.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= user.username %>'s Notebook</title>
</head>
<body>
    <%- include('../partials/_navbar.ejs') %>
    <h1><%= user.username %>'s Notebook</h1>
    <ul>
         <% if (user.triggers.length > 0) { %>
            <% user.triggers.forEach(t => { %>
                <li><%= t.notes %></li>
            <% }) %>
        <% } else { %>
            <li>No notes on this one</li>
        <% } %>
    </ul>
    <a href="/users">Back to Community</a>
</body>
</html>
